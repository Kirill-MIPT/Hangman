    "import random\n",
    "def check(guessing_word,guessed_word,letters, attemps, flag):\n",
    "    winner = ''\n",
    "    for item in guessing_word:\n",
    "        if item in letters:\n",
    "            guessed_word += item\n",
    "        else:\n",
    "            guessed_word += '*'\n",
    "    if flag == 1:\n",
    "        print 'Hit! The word is:', guessed_word\n",
    "    else:\n",
    "        attemps += 1\n",
    "        print 'Mistake, '+str(attemps)+' out of 5 attemps used'\n",
    "    print guessed_word\n",
    "    if '*' not in guessed_word:\n",
    "        winner = 'yes'\n",
    "        attemps = 5\n",
    "    return attemps, letters, winner   \n",
    "\n",
    "words = ['mom', 'lake', 'frog']\n",
    "word = random.choice(words)\n",
    "guessed_word= ''\n",
    "test = '*'*len(word)\n",
    "print 'welcome!!! the word is ', test\n",
    "attemps = 0\n",
    "letters = ''\n",
    "while (attemps<5):\n",
    "    flag = 0\n",
    "    print \">Guess a letter:\"\n",
    "    letter = raw_input()\n",
    "    if letter in word:\n",
    "        if letter not in letters: \n",
    "            letters = letters+letter\n",
    "            flag = 1\n",
    "        else:\n",
